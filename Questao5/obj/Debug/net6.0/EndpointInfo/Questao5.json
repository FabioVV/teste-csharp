{
  "openapi": "3.0.4",
  "info": {
    "title": "API Banco",
    "version": "v1"
  },
  "paths": {
    "/api/v1/conta/movimentar/{id}": {
      "post": {
        "tags": [
          "Conta"
        ],
        "summary": "Movimenta uma conta",
        "description": "Este endpoint proporciona a ação de movimentar a conta através de débito ou crédito. A identificação de conta do usuário precisa ser na URL da request.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MovimentarContaRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Movimentou a conta com sucesso."
          },
          "400": {
            "description": "Erro de validação dos dados do body da request ou ID na URL."
          }
        }
      }
    },
    "/api/v1/conta/consultar/{id}": {
      "get": {
        "tags": [
          "Conta"
        ],
        "summary": "Procura uma conta por id",
        "description": "Este endpoint proporciona a ação de procurar por uma conta no banco através do seu id. A identificação de conta do usuário precisa ser passada na URL da requisição.",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Conta encontrada com sucesso."
          },
          "400": {
            "description": "Erro na válidação do ID da conta. (Inválido, inativa)"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MovimentarContaRequest": {
        "type": "object",
        "properties": {
          "IdContaCorrente": {
            "type": "string",
            "nullable": true
          },
          "Valor": {
            "type": "number",
            "format": "double"
          },
          "TipoMovimento": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  }
}